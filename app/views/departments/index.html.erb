	<div id="div_main_content">
		<div class="span-20">
			<table class="roundBorder">
				<tr>
					<th>Name</th>
					<th>Groupname</th>
					<th>Modifieddate</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>

				<% @departments.each do |department| %>
				<tr>
					<td><%= department.Name %></td>
					<td><%= department.GroupName %></td>
					<td><%= department.ModifiedDate %></td>
					<td><%= link_to 'Show', department %></td>
					<td><%= link_to 'Edit', edit_department_path(department) %></td>
					<td><%= link_to 'Destroy', department, confirm: 'Are you sure?', method: :delete %></td>
				</tr>
				<% end %>
			</table>
		</div>

		<div class="span-3 last" id="div_links">
			<ul >
				<li>
					<%= link_to 'New Department', new_department_path %>
				</li>
				<br />
				<li>
					<%= link_to 'Search', search_departments_path%> 
				</li>
			</ul>
		</div>
	</div>
	<%= will_paginate @departments %>
</div >
